<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.appchatgui.ClientController">
    <HBox>
        <Label text="PORT NO."/>
        <TextField fx:id="portName" text="8080"/>
        <Button text="START" onAction="#start"/>
    </HBox>
    <VBox prefWidth="400.0">
        <Label text="CLIENT"/>
        <TextArea fx:id="textArea" />
    </VBox>
    <HBox>
        <TextArea prefWidth="400.0" prefHeight="80.0" fx:id="textAreaChat"/>
        <Button text="SEND" prefHeight="80.0" prefWidth="100.0" onAction="#send"/>
    </HBox>
</VBox>
