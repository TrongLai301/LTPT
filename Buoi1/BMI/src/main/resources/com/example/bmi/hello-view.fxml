<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.bmi.HelloController">
    <HBox>
        <Label text="height: "/>
        <TextField promptText="Enter height" alignment="CENTER" fx:id="height"/>
    </HBox>
    <HBox>
        <Label text="weight: "/>
        <TextField promptText="Enter weight" alignment="CENTER" fx:id="weight"/>
    </HBox>
    <HBox>
        <Button alignment="CENTER" text="Result" onAction="#result"/>
    </HBox>
</VBox>
