<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ungdungkhaosatsinhvien.HelloController">
    <Label text="1. Ban co thuong dung FB de hoc nhom" fx:id="test1"/>
    <HBox>
        <RadioButton text="dung" fx:id="trueInQuest1">
            <toggleGroup>
                <ToggleGroup fx:id="toggleGroup"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton text="doi luc" toggleGroup="$toggleGroup" fx:id="sometimeInQuest1"/>
        <RadioButton text="khong bao gio" toggleGroup="$toggleGroup" fx:id="noInQuest1"/>
    </HBox>
    <Label text="2. Ban co thuong dung FB de tim tai lieu hoc tap" fx:id="test2"/>
    <HBox>
        <RadioButton text="dung" fx:id="trueInQuest2">
            <toggleGroup>
                <ToggleGroup fx:id="toggleGroup1"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton text="doi luc" toggleGroup="$toggleGroup1" fx:id="sometimeInQuest2"/>
        <RadioButton text="khong bao gio" toggleGroup="$toggleGroup1" fx:id="noInQuest2"/>
    </HBox>
    <Button text="Submit" onAction="#submit"/>

</VBox>
